<%= form_with(model: leaderboard, local: true) do |form| %>
  <% if leaderboard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(leaderboard.errors.count, "error") %> prohibited this leaderboard from being saved:</h2>

      <ul>
      <% leaderboard.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user %><br />
    <%= form.select :user_id, options_for_select(@users.map{ |u| [u.name, u.id] }, {:include_blank => 'name of your blank prompt'}) %>
  </div>
  
  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, id: :leaderboard_year %>
  </div>

  <div class="field">
    <%= form.label :total_points %>
    <%= form.number_field :total_points, id: :leaderboard_total_points %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
