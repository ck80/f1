<%= form_with(model: tip, local: true) do |form| %>
  <% if tip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tip.errors.count, "error") %> prohibited this tip from being saved:</h2>
      <ul>
      <% tip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  debug = <%= params[:action] %>
  <div class="field">
    <%= form.label :user %>
	<% if params[:action] == "edit" %>
		<%= form.select :user_id, options_for_select([[@tip.user.name, @tip.user_id]], @tip.user_id) %>
	<% else %>
    	<%= form.select :user_id, options_for_select(@users.map{ |u| [u.name, u.id] }, @tip.user_id) %>		
	<% end %>
  </div>
  
  <div class="field">
    <%= form.label :race %>
	<% if params[:action] == "edit" %>
    	<%= form.select :race_id, options_for_select([[@tip.race.country, @tip.race_id]], @tip.race_id) %>
	<% else %>
    	<%= form.select :race_id, options_for_select(@races.map{ |r| [r.country, r.id] }, @tip.race_id) %>
	<% end %>
  </div>
  
  <div class="field">
    <%= form.label :qual_first %>
    <%= form.select :qual_first, options_for_select(@drivers.map{ |d| [d.abbr_name, d.abbr_name] }.sort, @tip.qual_first), include_blank: "Qualify 1st" %>
  </div>

  <div class="field">
    <%= form.label :qual_second %>
	<%= form.select :qual_second, options_for_select(@drivers.map{ |d| [d.abbr_name, d.abbr_name] }.sort, @tip.qual_second), include_blank: 'Qualify 2nd' %>
  </div>

  <div class="field">
    <%= form.label :qual_third %>
    <%= form.select :qual_third, options_for_select(@drivers.map{ |d| [d.abbr_name, d.abbr_name] }.sort, @tip.qual_third), include_blank: 'Qualify 3rd' %>
  </div>

  <div class="field">
    <%= form.label :race_first %>
	<%= form.select :race_first, options_for_select(@drivers.map{ |d| [d.abbr_name, d.abbr_name] }.sort, @tip.race_first), include_blank: 'Race 1st' %>
  </div>

  <div class="field">
    <%= form.label :race_second %>
	<%= form.select :race_second, options_for_select(@drivers.map{ |d| [d.abbr_name, d.abbr_name] }.sort, @tip.race_second), include_blank: 'Race 2nd' %>
  </div>

  <div class="field">
    <%= form.label :race_third %>
    <%= form.select :race_third, options_for_select(@drivers.map{ |d| [d.abbr_name, d.abbr_name] }.sort, @tip.race_third), include_blank: 'Race 3rd' %>
  </div>

  <div class="field">
    <%= form.label :race_tenth %>
    <%= form.select :race_tenth, options_for_select(@drivers.map{ |d| [d.abbr_name, d.abbr_name] }.sort, @tip.race_tenth), include_blank: 'Race 10th' %>
  </div>

  <div class="actions">
	<%= form.hidden_field :updated_by, :value => current_user.email %>
    <%= form.submit %>
  </div>
<% end %>
