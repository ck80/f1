<h1>Race Results: <%=@year + " " + @country%></h1>
<table>
	<th>Place</th><th>Car</th><th>Driver</th><th>Team</th>
	<% @resultsArray.each do |result| %>
  	<tr>
		<td><%= result.place %></td>
		<td><%= result.car %></td>
		<td><%= result.driver %></td>
		<td><%= result.team %></td>
	</tr>
	<% 
	x = Driver.find_by(abbr_name: result.driver).id
	y = Race.find_by(country: @country).id
	r = RaceResult.new
	r.position = result.place
	r.race_id = y
	r.driver_id = x
	r.save
	 %>
	<% end %>
</table>

<%= link_to 'Back', race_results_path %>

<h2>Debug: </h2>
<p>@resultsArray count = <%= @resultsArray.count %></p>
<p>@resultsArray inspect = <%= @resultsArray.inspect %></p>	
<p>@resultsArray methods = <% @resultsArray.public_methods %></p>